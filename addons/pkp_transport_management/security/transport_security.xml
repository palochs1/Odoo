<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_transport" model="ir.module.category">
        <field name="name">Transport</field>
    </record>

    <record id="group_transport_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="pkp_transport_management.module_category_transport"/>
        <field name="users" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_transport_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="implied_ids" eval="[(4, ref('pkp_transport_management.group_transport_user'))]"/>
        <field name="category_id" ref="pkp_transport_management.module_category_transport"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('pkp_transport_management.group_transport_manager'))]"/>
    </record>

</odoo>

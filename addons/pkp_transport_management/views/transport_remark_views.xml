<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
	
		<record id="view_transport_remark_form" model="ir.ui.view">
        <field name="name">transport.remark.form</field>
        <field name="model">transport.remark</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
				<sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name" nolabel="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

        <record id="res_transport_remark_tree" model="ir.ui.view">
            <field name="name">transport.remark.tree</field>
            <field name="model">transport.remark</field>
            <field name="arch" type="xml">
                <tree string="Transport Remark">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="transport_remark_search" model="ir.ui.view">
            <field name="name">transport.remark.filter</field>
            <field name="model">transport.remark</field>
            <field name="arch" type="xml">
                <search string="Transport Remark Filter">
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_transport_remark">
            <field name="name">Transport Remark</field>
            <field name="res_model">transport.remark</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_action_transport_remark"
                  parent="pkp_transport_management.menu_transport_configuration"
                  sequence="2"
                  action="action_transport_remark"
        />

    </data>
</odoo>

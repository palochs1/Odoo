<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Transporters -->
        <record id="view_transporter_tree" model="ir.ui.view">
            <field name="name">view.transporter.tree</field>
            <field name="model">pkp.transport.transporter</field>
            <field name="arch" type="xml">
                <tree string="Transporters" sample="1">
                    <field name="name" optional="show"/>
                    <field name="phone" class="o_force_ltr" optional="show"/>
                    <field name="email" optional="show"/>
                    <field name="city" optional="show"/>
                    <field name="state_id" optional="show"/>
                    <field name="country_id" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="view_transporter_form" model="ir.ui.view">
            <field name="name">view.transporter.form</field>
            <field name="model">pkp.transport.transporter</field>
            <field name="arch" type="xml">
                <form string="Transporters">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object"
                                name="action_view_fleet"
                                class="oe_stat_button"
                                icon="fa-truck" attrs="{'invisible':[('fleet_ids','=',[])]}">
                                <field name="fleet_count" widget="statinfo" string="Fleets"/>
                                <field name="fleet_ids" invisible="1"/>
                            </button>
                        </div>
                        <field name="currency_id" invisible="1"/>
                        <field name="avatar_128" invisible="1"/>
                        <field name="image_1920" widget='image' class="oe_avatar" options='{"preview_image": "avatar_128"}'/>
                        <div class="oe_title">
                            <h1><field name="name" required="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <span class="o_form_label o_td_label" name="address_name">
                                    <b>Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"
                                        context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                            <group>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="charge_amount"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="transporter_kanban_view" model="ir.ui.view">
            <field name="name">view.transporter.kanban</field>
            <field name="model">pkp.transport.transporter</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="fleet_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('pkp.transport.transporter', 'avatar_128', record.id.raw_value)})" role="img"/>
                                <div class="oe_kanban_details d-flex flex-column">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <field name="email"/>
                                    <div class="o_row">
                                        <span class="oe_kanban_partner_links">
                                            <span t-if="record.fleet_count.value&gt;0" class="badge badge-pill"><i class="fa fa-fw fa-truck" role="img" aria-label="Fleets" title="Fleets"/><t t-esc="record.fleet_count.value"/></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_transporters" model="ir.actions.act_window">
            <field name="name">Transporters</field>
            <field name="res_model">pkp.transport.transporter</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to add new Transporters
                </p><p>
                    Request records for transporters
                </p>
            </field>
        </record>

        <menuitem id="menu_my_transporters" 
            name="Transporters" 
            parent="menu_transporters"
            action="action_transporters"
            sequence="5"/>
        
        <!-- Transport Shipments -->
        <record id="shipment_view_search" model="ir.ui.view">
            <field name="name">shipment.view.search</field>
            <field name="model">pkp.transport.shipment</field>
            <field name="arch" type="xml">
                <search string="Shipment">
                    <field string="Shipments" name="name"/>
                    <filter domain="[('state', '=', 'draft')]" string="Draft" name="draft"/>
                    <filter domain="[('state', '=', 'in_transit')]" string="In Transit" name="in_transit"/>
                    <filter domain="[('state', '=', 'arrived')]" string="Arrived" name="arrived"/>
                    <filter domain="[('state', '=', 'done')]" string="Done" name="done"/>
                    <filter domain="[('state', '=', 'cancel')]" string="Cancelled" name="cancel"/>
                    <group expand="0" string="Group By">
                        <filter string="Responsible" name="responsible" domain="[]" context="{'group_by': 'user_id'}"/>
                        <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                        <filter string="Status" domain="[]" context="{'group_by': 'state'}" name="state"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_shipment_tree" model="ir.ui.view">
            <field name="name">view.shipment.tree</field>
            <field name="model">pkp.transport.shipment</field>
            <field name="arch" type="xml">
                <tree string="Shipments" sample="1">
                    <field name="name" optional="show"/>
                    <field name="transporter_id" optional="show"/>
                    <field name="license_plate_id" optional="show"/>
                    <field name="driver_id" optional="show"/>
                    <field name="delivery_date" optional="show"/>
                    <field name="close_date" optional="hide"/>
                    <field name="mileage_start" optional="show"/>
                    <field name="mileage_end" optional="show"/>
                    <field name="user_id" widget="many2one_avatar_user" optional="hide"/>
                    <field name="state" optional="show" widget="badge"
                        decoration-info="state == 'draft'"
                        decoration-warning="state in ['arranging', 'in_transit', 'arrived']"                        
                        decoration-success="state == 'done'"/>
                </tree>
            </field>
        </record>

        <record id="view_shipment_form" model="ir.ui.view">
            <field name="name">view.shipment.form</field>
            <field name="model">pkp.transport.shipment</field>
            <field name="arch" type="xml">
                <form string="Shipments">
                    <header>
                        <button name="action_arrang" states="draft" string="Arrang" type="object" class="oe_highlight"/>
                        <button name="action_start" states="arranging" string="Start" type="object" class="oe_highlight"/>
                        <button name="action_end" states="in_transit" string="End" type="object" class="oe_highlight"/>
                        <button name="action_close" states="arrived" string="Close" type="object" class="oe_highlight"/>
                        <button name="action_cancel" states="draft,arranging" string="Cancel" type="object"/>
                        <button name="action_draft" states="cancel" string="Reset to Draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,arranging,in_transit,arrived,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="transporter_id" attrs="{'readonly': [('state','not in', ['draft', 'arranging'])], 'required': True}"/>
                                <field name="license_plate_id" attrs="{'readonly': [('state','not in', ['draft', 'arranging'])]}"/>
                                <field name="driver_id"/>
                                <field name="mileage_start"/>
                                <field name="mileage_end"/>
                            </group>
                            <group>
                                <field name="delivery_date"/>
                                <field name="close_date" readonly="1"/>
                                <field name="user_id" widget="many2one_avatar_user" readonly="1"/>
                                <field name="reference_all"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Picking Orders">
                                <!-- <field name="picking_ids" attrs="{'readonly': [('state','not in', ['draft', 'arranging'])]}"> -->
                                <field name="picking_ids">
                                    <tree editable="bottom" decoration-success="state == 'at_destination'" decoration-danger="state == 'cancel'">
                                        <field name="sequence" optional="show"/>
                                        <field name="picking_id" required="1" domain="[('transporter_id', '=', parent.transporter_id)]" optional="show"/>
                                        <field name="origin" optional="show"/>
                                        <field name="partner_id" optional="show"/>
                                        <field name="delivery_place_id" optional="show"/>
                                        <field name="transport_remark" optional="show"/>
                                        <field name="remark" optional="hide"/>
                                        <field name="state" required="1" optional="show"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="picking_id"/>
                                                <field name="partner_id"/>
                                                <field name="origin"/>
                                                <field name="delivery_place_id"/>
                                                <field name="remark"/>
                                            </group>
                                        </group>                                                                     
                                    </form>
                                </field>
                            </page>
                            <page string="Invoices">
                                <field name="invoice_ids" domain="[('move_type', 'in', ['out_invoice', 'out_refund', 'out_receipt']), ('payment_state', 'in', ['not_paid', 'partial'])]"/>
                            </page>
                            <page string="Extra Cost">
                                <!-- <field name="extra_cost_ids" attrs="{'readonly': [('state','not in', ['draft', 'arranging'])]}"> -->
                                <field name="extra_cost_ids">
                                    <tree editable="bottom">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="product_id" optional="show"/>
                                        <field name="name" required="1" optional="show"/>
                                        <field name="cost_type" optional="show"/>
                                        <field name="quantity" optional="show"/>
                                        <field name="product_uom_id" optional="show"/>
                                        <field name="price_unit" optional="show"/>
                                        <field name="price_subtotal" optional="show"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="currency_id" invisible="1"/>
                                                <field name="product_id"/>
                                                <field name="name"/>
                                                <field name="quantity"/>
                                                <field name="product_uom_id"/>
                                                <field name="price_unit"/>
                                                <field name="price_subtotal"/>
                                            </group>
                                        </group>                                                                     
                                    </form>
                                </field>
                                <group>
                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="extra_cost_total_amount">
                                        <field name="extra_cost_total_amount" />
                                    </group>
                                </group>
                            </page>
                            <page string="Employee Cost">
                                <field name="employee_cost_ids" attrs="{'readonly': [('state','in', ['done', 'cancel'])]}">
                                    <tree editable="bottom">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="employee_id" widget="many2one_avatar_employee" optional="show"/>
                                        <field name="allowance_amount" optional="show"/>
                                        <field name="additional_amount" optional="show"/>
                                        <field name="transport_amount" optional="show"/>
                                        <field name="total_amount" optional="show"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="currency_id" invisible="1"/>
                                                <field name="employee_id" widget="many2one_avatar_employee"/>
                                                <field name="allowance_amount"/>
                                                <field name="additional_amount"/>
                                                <field name="transport_amount"/>
                                                <field name="total_amount"/>
                                            </group>
                                        </group>                                                                     
                                    </form>
                                </field>
                                <group>
                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="employee_cost_total_amount">
                                        <field name="employee_cost_total_amount" />
                                    </group>
                                </group>
                            </page>
                            <page string="Gas Detail">
                                <group>
                                    <group>
                                        <field name="gas_amount" />
                                        <field name="liter" />
                                        <field name="mileage" />
                                    </group>
                                    <group>
                                        <field name="gas_date" />
                                    </group>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="extra_cost_id"/>
                                        <field name="remark" />
                                    </group>
                                    <group name="company_info">
                                        <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_transport_shipments" model="ir.actions.act_window">
            <field name="name">Shipments</field>
            <field name="res_model">pkp.transport.shipment</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to add new Shipments
                </p><p>
                    Request records for shipments
                </p>
            </field>
        </record>

        <menuitem id="menu_transport_shipments" 
            name="Shipments" 
            parent="menu_operation"
            action="action_transport_shipments"
            sequence="15"/>

    </data>
</odoo>
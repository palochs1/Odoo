<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_delivery_place_tree" model="ir.ui.view">
            <field name="name">view.delivery.place.tree</field>
            <field name="model">pkp.delivery.place</field>
            <field name="arch" type="xml">
                <tree string="Delivery Places" editable="bottom" multi_edit="1" sample="1">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_delivery_place" model="ir.actions.act_window">
            <field name="name">Delivery Places</field>
            <field name="res_model">pkp.delivery.place</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No delivery places.
                </p>
            </field>
        </record>

        <menuitem
            id="delivery_place_menu_settings"
            name="Delivery Places"
            parent="stock.menu_stock_config_settings"
            sequence="63"
            action="action_delivery_place"/>

    </data>
</odoo>
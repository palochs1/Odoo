<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <menuitem id="transport_management_fleet_vehicle_menu" 
            name="Fleet"
            action="fleet.fleet_vehicle_action" 
            parent="pkp_transport_management.menu_transporters"
            groups="fleet.fleet_group_user" 
            sequence="1"/>
        
        <record id="fleet_vehicle_view_form_inherit_transport_management" model="ir.ui.view">
            <field name="name">fleet.vehicle.view.form.inherit.transport.management</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='location']" position='after'>
                    <field name="transporter_id"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
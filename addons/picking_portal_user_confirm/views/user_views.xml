<odoo>
  <record id="view_res_user_form_line_uid" model="ir.ui.view">
    <field name="name">res.user.form.line.uid</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_form"/>
    <field name="arch" type="xml">
      <!-- Add field in a new page/section to show and copy link -->

        <xpath expr="//form/header" position="inside">
            <button name="action_generate_portal_link"
               string="Generate Register Link"
               type="object"
               class="oe_highlight" invisible="0"/>
        </xpath>

        <xpath expr="//form/sheet/notebook" position="inside">
        <page string="Portal Register" invisible="0">
          <group>
            <field name="access_token" invisible="1"/>
            <field name="line_uid" invisible="0"/>
            <field name="portal_confirm_link" invisible="0"/>
            <field name="type_users" invisible="0"/>
          </group>
        </page>
      </xpath>

    </field>
  </record>
</odoo>